<%- include('../partials/user/header', { userName: userName }) %>

    <div class="container py-4 mt-3">
        <div class="order-container">
            <div class="order-summary-card mb-4">
                <div class="order-header">
                    <h2 class="order-title">Order #<%= order.orderId %>
                    </h2>
                    <div class="order-status-badge <%= order.status.toLowerCase() %>">
                        <%= order.status %>
                    </div>
                </div>

                <div class="order-meta">
                    <div class="meta-item">
                        <i class="far fa-calendar-alt me-2"></i>
                        <span>Placed on <%= new Date(order.createdAt).toLocaleDateString('en-IN', { day: 'numeric' ,
                                month: 'long' , year: 'numeric' }) %></span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-wallet me-2"></i>
                        <span>Total: <strong>₹<%= order.totalPrice.toFixed(2) %></strong></span>
                    </div>
                </div>
            </div>

            <div class="order-section">
                <h3 class="section-title">Order Items</h3>
                <div class="order-items">
                    <% order.orderItems.forEach((item, index)=> { %>
                        <div class="order-item">
                            <div class="item-image">
                                <img src="/uploads/products/<%= item.productId.images[0] %>"
                                    alt="<%= item.productId.productName %>">
                                alt="<%= item.productId.name %>">
                            </div>
                            <div class="item-details">
                                <h4 class="item-name">
                                    <%= item.productId.productName %>
                                </h4>
                                <div class="item-price">₹<%= (item.productId.salesPrice ||
                                        item.productId.regularPrice).toFixed(2) %>
                                </div>
                                <div class="item-quantity">Qty: <%= item.quantity %>
                                </div>
                                <h4>Status: <%= item.status || order.status %>
                                </h4>
                            </div>
                            <% if(order.status !=="Cancelled" && order.status !=="Delivered" ){ %>
                                <div class="item-actions">
                                    <form id="cancel-form-<%= item.productId._id %>"
                                        action="/my-orders/<%= order.orderId %>/cancel-product/<%= item.productId._id %>"
                                        method="POST" style="display:none;">
                                        <input type="hidden" name="reason" id="reason-<%= item.productId._id %>">
                                    </form>

                                    <button type="button" class="btn-cancel-item"
                                        onclick="cancelItem('<%= item.productId._id %>')">
                                        <i class="fas fa-times me-1"></i> Cancel Item
                                    </button>

                                </div>
                                <% } %>
                        </div>
                        <% }) %>
                </div>
            </div>

            <div class="shipping-address">
                <p class="address-type">
                    <%= order.addressId?.addressType || 'N/A' %>
                </p>
                <p class="address-city">
                    <%= order.addressId?.city || 'N/A' %>, <%= order.addressId?.state || 'N/A' %> - <%=
                                order.addressId?.pincode || 'N/A' %>
                </p>
                <p class="address-landmark">
                    <%= order.addressId?.landmark || 'N/A' %>
                </p>
                <p class="address-phone">
                    <i class="fas fa-phone-alt me-2"></i>+91 <%= order.addressId?.phoneNumber || 'N/A' %>
                </p>
            </div>

        </div>

        <div class="order-summary">
            <h3 class="section-title">Order Summary</h3>
            <div class="summary-row">
                <span>Subtotal (<%= order.orderItems.reduce((total, item)=> total + item.quantity, 0) %> items)</span>
                <span>₹<%= order.orderItems.reduce((total, item)=> total + (item.productId.salesPrice ||
                        item.productId.regularPrice) * item.quantity, 0).toFixed(2) %></span>
            </div>
            <div class="summary-row">
                <span>Shipping</span>
                <span>₹<%= (50 || 0).toFixed(2) %></span>
            </div>
            <% if(order.discountAmount && order.discountAmount> 0) { %>
                <div class="summary-row discount">
                    <span>Discount</span>
                    <span>-₹<%= order.discountAmount.toFixed(2) %></span>
                </div>
                <% } %>
                    <div class="summary-total">
                        <span>Total</span>
                        <span>₹<%= order.totalPrice.toFixed(2) %></span>
                    </div>
        </div>
    </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        async function cancelItem(productId) {
            const { value: reason } = await Swal.fire({
                title: 'Cancel Item?',
                input: 'text',
                inputPlaceholder: 'Enter reason for cancellation',
                showCancelButton: true,
                confirmButtonText: 'Yes, Cancel',
                cancelButtonText: 'No',
                inputValidator: (value) => {
                    if (!value) return 'Reason is required!';
                }
            });

            if (!reason) return;

            try {
                const response = await fetch(`/my-orders/${'<%= order.orderId %>'}/cancel-product/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ reason })
                });

                if (response.ok) {
                    // Update UI without page reload
                    const btn = document.querySelector(`#cancel-form-${productId} ~ .btn-cancel-item`);
                    btn.innerHTML = '<i class="fas fa-check me-1"></i> Item Cancelled';
                    btn.disabled = true;

                    Swal.fire({
                        icon: 'success',
                        title: 'Cancelled!',
                        text: 'The item has been cancelled successfully.',
                        timer: 2000,
                        showConfirmButton: false
                    });
                } else {
                    const text = await response.text();
                    Swal.fire('Error', text, 'error');
                }
            } catch (err) {
                console.error(err);
                Swal.fire('Error', 'Something went wrong!', 'error');
            }
        }
    </script>


    <style>

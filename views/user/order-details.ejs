        }

        .order-status-badge.processing {
            background-color: #cce5ff;
            color: #004085;
        }

        .order-status-badge.shipped {
            background-color: #e2e3e5;
            color: #383d41;
        }

        .order-status-badge.delivered {
            background-color: #d4edda;
            color: #155724;
        }

        .order-status-badge.cancelled,
        .order-status-badge.returned {
            background-color: #f8d7da;
            color: #721c24;
        }

        .order-meta {
            display: flex;
            gap: 20px;
            color: #666;
            font-size: 14px;
        }

        .meta-item {
            display: flex;
            align-items: center;
        }

        .order-items-section {
            margin-top: 16px;
        }

        .section-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 15px;
            color: #333;
            padding-bottom: 10px;
            border-bottom: 1px solid #f0f0f0;
        }

        .order-items {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .order-item {
            display: flex;
            padding: 12px 0;
            border-bottom: 1px solid #f0f0f0;
            align-items: center;
        }

        .order-item:last-child {
            border-bottom: none;
        }

        .item-image {
            width: 60px;
            height: 60px;
            border-radius: 4px;
            overflow: hidden;
            margin-right: 15px;
            background: #f8f9fa;
            flex-shrink: 0;
        }

        .item-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .item-details {
            flex: 1;
        }

        .item-name {
            font-weight: 500;
            margin-bottom: 5px;
            color: #333;
        }

        .item-price,
        .item-quantity,
        .item-subtotal {
            font-size: 14px;
            color: #666;
            margin-bottom: 3px;
        }

        .item-subtotal {
            font-weight: 500;
            color: #333;
        }

        .item-actions {
            margin-left: 15px;
            display: flex;
            align-items: center;
        }

        .btn-cancel-item {
            background: none;
            border: 1px solid #dc3545;
            color: #dc3545;
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 13px;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-cancel-item:hover {
            background-color: #f8d7da;
        }

        .shipping-section {
            margin-top: 16px;
            padding-top: 16px;
            border-top: 1px solid #f0f0f0;
        }

        .address-name {
            font-weight: 500;
            margin-bottom: 5px;
            color: #333;
        }

        .address-street,
        .address-city {
            color: #666;
            margin-bottom: 3px;
        }

        .address-phone {
            color: #666;
            margin-top: 8px;
            display: flex;
            align-items: center;
        }

        .order-summary {
            margin: 16px 0;
            padding: 16px 0;
            border-top: 1px solid #f0f0f0;
            border-bottom: 1px solid #f0f0f0;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            padding-bottom: 10px;
            border-bottom: 1px solid #f0f0f0;
        }

        .summary-row:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .summary-total {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 1px solid #e9ecef;
            font-size: 1.1rem;
            font-weight: 600;
            color: #333;
        }

        .discount {
            color: #28a745;
        }

        @media (max-width: 768px) {
            .order-meta {
                flex-direction: column;
                gap: 8px;
            }

            .order-item {
                flex-direction: column;
            }

            .item-actions {
                margin: 10px 0 0 0;
                width: 100%;
            }

            .btn-cancel-item {
                width: 100%;
                text-align: center;
            }
        }
    </style>

    <%- include('../partials/user/footer') %>
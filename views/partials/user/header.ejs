<!DOCTYPE html>
<html lang="en">
<head>
  <title>GLORA</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="description" content="Wish shop project">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="styles/bootstrap4/bootstrap.min.css">
  <link href="plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" type="text/css" href="plugins/OwlCarousel2-2.2.1/owl.carousel.css">
  <link rel="stylesheet" type="text/css" href="plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
  <link rel="stylesheet" type="text/css" href="plugins/OwlCarousel2-2.2.1/animate.css">
  <link href="plugins/colorbox/colorbox.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" type="text/css" href="styles/main_styles.css">
  <link rel="stylesheet" type="text/css" href="styles/responsive.css">

  <style>
    .header_inner {
      padding: 8px 25px;
      background: #ffffff;
      box-shadow: 0 2px 6px rgba(0,0,0,0.08);
      height: 65px;
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      gap: 20px;
      flex-wrap: nowrap;
    }

    .logo a {
      font-size: 22px;
      font-weight: 700;
      letter-spacing: 0.5px;
      color: #222 !important;
      text-decoration: none;
    }

    .main_nav ul {
      display: flex;
      margin: 0;
      padding: 0;
      list-style: none;
      gap: 12px;
    }

    .main_nav ul li a {
      color: #444;
      font-weight: 500;
      text-transform: uppercase;
      font-size: 12px;
      transition: color 0.3s ease;
      text-decoration: none;
    }

    .main_nav ul li a:hover {
      color: #850101;
    }

    .main_nav ul li a.active {
      color: #7c1818;
      font-weight: 700;
    }

    .shopping img, .avatar img {
      width: 18px;
      height: 18px;
      transition: transform 0.2s ease;
    }

    .shopping img:hover, .avatar img:hover {
      transform: scale(1.1);
    }

    .avatar span {
      color: #333;
      font-weight: 600;
      font-size: 12px;
    }

    .btn-sm {
      font-size: 12px;
      padding: 2px 6px;
    }

    .btn-outline-dark {
      border: 1px solid #444;
      color: #444;
      transition: all 0.3s ease;
    }

    .btn-outline-dark:hover {
      background: #6b2c22;
      color: #fff !important;
      border-color: #6b2c22;
    }

    .btn-outline-primary {
      border: 1px solid #620000;
      color: #720606;
    }

    .btn-outline-primary:hover {
      background: #720404;
      color: #fff;
    }

    .header_content {
      display: flex;
      align-items: center;
      gap: 16px;
      flex-wrap: nowrap;
      white-space: nowrap;
    }
  </style>
</head>

<body>
  <header class="header">
    <div class="header_inner">
      <div class="logo">
        <a href="#">GLORA</a>
      </div>

      <nav class="main_nav">
        <ul>
          <li><a href="/" class="<%= (url === '/' || url === '/home') ? 'active' : '' %>">Home</a></li>
          <li><a href="/shop" class="<%= url.startsWith('/shop') ? 'active' : '' %>">Shop</a></li>
          <li><a href="/categories" class="<%= url.startsWith('/categories') && !url.includes('signin') ? 'active' : '' %>">About us</a></li>
          <li><a href="/signin" class="<%= url.startsWith('/signin') ? 'active' : '' %>">Sign in</a></li>
          <li><a href="/contact" class="<%= url.startsWith('/contact') ? 'active' : '' %>">Contact Us</a></li>
        </ul>
      </nav>

      <div class="header_content">
        <div class="shopping d-flex align-items-center" style="gap: 10px;">
          <a href="#"><img src="images/shopping-bag.svg" alt="Bag"></a>
          <a href="#"><img src="images/star.svg" alt="Wishlist"></a>
        </div>

        <div class="avatar d-flex align-items-center" style="gap: 6px;">
  <% if (typeof userName !== 'undefined' && userName) { %>
    <a href="/profile" class="d-flex align-items-center" style="gap: 6px; text-decoration: none; color: inherit;">
      <img src="images/avatar.svg" alt="Avatar">
      <span><%= userName %></span>
    </a>
    <form action="/logout" method="POST" style="margin: 0;">
      <button type="submit" class="btn btn-sm btn-outline-dark">Logout</button>
    </form>
  <% } else { %>
    <img src="images/avatar.svg" alt="Avatar">
    <span style="color: #777;">Guest</span>
    <a href="/login" class="btn btn-sm btn-outline-primary">Login</a>
  <% } %>
</div>

      </div>
    </div>
  </header>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/css/admin.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../partials/admin/header') %>
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
  <div class="container mt-5">
    <h1 class="mb-4">Welcome to the Admin Dashboard</h1>
    <div class="row g-4">
      <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
          <div class="card-body">
            <h5 class="card-title">Total Customers</h5>
            <p class="card-text display-6"><%= typeof totalCustomers !== 'undefined' ? totalCustomers : '...' %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
          <div class="card-body">
            <h5 class="card-title">Total Orders</h5>
            <p class="card-text display-6"><%= typeof totalOrders !== 'undefined' ? totalOrders : '...' %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
          <div class="card-body">
            <h5 class="card-title">Total Products</h5>
            <p class="card-text display-6"><%= typeof totalProducts !== 'undefined' ? totalProducts : '...' %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-white bg-danger mb-3">
          <div class="card-body">
            <h5 class="card-title">Total Sales</h5>
            <p class="card-text display-6"><%= typeof totalSales !== 'undefined' ? totalSales : '...' %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-12">
        <div class="card">
          <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">Recent Orders</h5>
          </div>
          <div class="card-body">
            <% if (recentOrders && recentOrders.length > 0) { %>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Total</th>
                  </tr>
                </thead>
                <tbody>
                  <% recentOrders.forEach(function(order) { %>
                    <tr>
                      <td><%= order._id %></td>
                      <td><%= order.customerName %></td>
                      <td><%= order.date %></td>
                      <td><%= order.status %></td>
                      <td>â‚¹<%= order.total %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            <% } else { %>
              <p>No recent orders found.</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  </main>
</body>
</html>
